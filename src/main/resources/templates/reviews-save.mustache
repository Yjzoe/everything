{{>layout/header}}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
</script>

<h1>리뷰 등록</h1>

<div class="col-md-12">
    <div class="col-md=4">
        <form enctype="multipart/form-data">
            <input type="hidden" id="writer" name="writer" value="{{userName}}"/>
            <div class="form-group">
                <label for="category">카테고리</label>
                <select name="category" id="category">
                    <option value="movie">영화</option>
                    <option value="book">책</option>
                    <option value="tvshow">TV프로그램</option>
                </select>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="gpa">평점</label><br/>
                <div class="gpa">
                    <input type="radio" id="star5" name="gpa" value="5" />
                    <label for="star5" title="text">5 stars</label>
                    <input type="radio" id="star4" name="gpa" value="4" />
                    <label for="star4" title="text">4 stars</label>
                    <input type="radio" id="star3" name="gpa" value="3" />
                    <label for="star3" title="text">3 stars</label>
                    <input type="radio" id="star2" name="gpa" value="2" />
                    <label for="star2" title="text">2 stars</label>
                    <input type="radio" id="star1" name="gpa" value="1" checked="checked"/>
                    <label for="star1" title="text">1 star</label>
                </div>
            </div>
            <br/>
            <br/>
            <div class="form-group">
                <label for="oneSentence">기억에 남는 한 문장</label>
                <input type="text" class="form-control" id="oneSentence" placeholder="작성자를 입력하세요">
            </div>
            <input type="file" id="img"/>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>
{{>layout/footer}}