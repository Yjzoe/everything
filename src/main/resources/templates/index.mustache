{{>layout/header}}
<h1>Review</h1>
<div class="col-md-12">
    <!-- 로그인 영역 -->
    <div class="row">
        <div class="col-md-6">
            <a href="/reviews/save" role="button" class="btn btn-primary">리뷰 등록</a>
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
            {{/userName}}
            <br/>
            <br/>
            {{#msg}}
                {{msg}}
            {{/msg}}
            {{^msg}}
            {{/msg}}
        </div>
    </div>
    <br>
    {{#userName}}
        <!-- 카테고리 선택 영역 -->
        <div class="form-group">
            <label for="selectCategory2">category</label>
            <select name="selectCategory2" id="selectCategory2" onchange="window.open(value,'_self')">
                <option selected disabled hidden>{{categoryKor}}</option>
                <option value="/?category=all&searchCategory={{searchCategory}}&keyword={{keyword}}">All</option>
                <option value="/?category=movie&searchCategory={{searchCategory}}&keyword={{keyword}}">영화</option>
                <option value="/?category=book&searchCategory={{searchCategory}}&keyword={{keyword}}">책</option>
                <option value="/?category=tvshow&searchCategory={{searchCategory}}&keyword={{keyword}}">TV프로그램</option>
            </select>
        </div>
        <!--리뷰 목록 출력 영역-->
        {{#reviews}}
        <table class="table table-horizontal">
        <thead class="thead-strong">
            <tr>
                <th> <font size="4">title</font> <a href="/reviews/update/{{id}}">{{title}}</a></th>
                <th> <span text-align="right"><font size="4">Date</font> {{modifiedDate}}</span></th>
            </tr>
            </thead>
            <tbody id="tbody">
            <tr>
                <td colspan="2">{{content}}</td>
            </tr>
            <tr>
                <td colspan="2">"{{oneSentence}}"</td>
            </tr>
            </tbody>
        </table>
        {{/reviews}}
        <form id="searchBox" action="/" method="get">
        <input type="hidden" name="category" id="category" value="{{category}}">
        <select id="searchCategory" name="searchCategory" required="required">
            <option value="title">제목</option>
            <option value="content">내용</option>
        </select>
        <input type="search" id="keyword" name="keyword" required="required"/>
        <input type="submit" value="검색"/>
        </form>
        <nav aria-label="...">
            <ul class="pagination">
            {{^reviews.isFirst}}
                <li class="page-item">
                    <a class="page-link" href="?page={{reviews.previousPageable.getPageNumber}}&category={{category}}&searchCategory={{searchCategory}}&keyword={{keyword}}">&larr;Previous</a>
                </li>
            {{/reviews.isFirst}}
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">{{reviews.getNumber}}<span class="sr-only">(current)</span></a>
                </li>
            {{^reviews.isLast}}
                <li class="page-item">
                    <a class="page-link" href="?page={{reviews.nextPageable.getPageNumber}}&category={{category}}&searchCategory={{searchCategory}}&keyword={{keyword}}">Next&rarr;</a>
                </li>
            {{/reviews.isLast}}
        </ul>
        </nav>
    {{/userName}}
</div>
{{>layout/footer}}